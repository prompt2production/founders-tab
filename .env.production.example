# .env.production.example
# Copy this file to .env.production and fill in your values
# Required for docker-compose deployment

# Database
DB_PASSWORD=your_secure_database_password_here

# Application
JWT_SECRET=your_secure_jwt_secret_here

# Email (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@founderstab.com
SYSTEM_NOTIFICATION_EMAIL=hello@founderstab.com

# Domain Configuration (update these for your domain)
NEXT_PUBLIC_DOMAIN=founderstab.com
NEXT_PUBLIC_APP_URL=https://founderstab.com
COOKIE_DOMAIN=.founderstab.com

# Nginx-proxy / Let's Encrypt
PROD_DOMAIN=founderstab.com
LETSENCRYPT_DOMAIN=founderstab.com
LETSENCRYPT_EMAIL=admin@founderstab.com

# Optional: Show test banner in production
NEXT_PUBLIC_SHOW_TEST_BANNER=false
