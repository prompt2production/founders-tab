// User Authentication Models

model User {
  id             String    @id @default(cuid())
  email          String    @unique
  name           String
  passwordHash   String
  avatarInitials String?
  role           Role      @default(MEMBER)
  companyId      String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // Relations
  company             Company?             @relation(fields: [companyId], references: [id])
  sessions            Session[]
  invitationsSent     Invitation[]         @relation("InvitedBy")
  invitation          Invitation?          @relation("InvitedUser")
  passwordResets      PasswordReset[]
  expenses            Expense[]
  approvals           Approval[]
  withdrawalApprovals WithdrawalApproval[]
  rejectedExpenses    Expense[]            @relation("RejectedExpenses")
  nudges              Nudge[]
}

enum Role {
  FOUNDER
  MEMBER
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Invitation {
  id         String           @id @default(cuid())
  email      String
  token      String           @unique
  message    String?
  status     InvitationStatus @default(PENDING)
  companyId  String?
  expiresAt  DateTime
  createdAt  DateTime         @default(now())
  acceptedAt DateTime?

  company      Company? @relation(fields: [companyId], references: [id])
  invitedById  String
  invitedBy    User     @relation("InvitedBy", fields: [invitedById], references: [id])

  acceptedById String? @unique
  acceptedBy   User?   @relation("InvitedUser", fields: [acceptedById], references: [id])
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  EXPIRED
}

model PasswordReset {
  id        String    @id @default(cuid())
  userId    String
  token     String    @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ===========================================
// Expense Models
// ===========================================

enum ExpenseStatus {
  PENDING_APPROVAL
  APPROVED
  REJECTED
  WITHDRAWAL_REQUESTED
  WITHDRAWAL_APPROVED
  WITHDRAWAL_REJECTED
  RECEIVED
}

model Expense {
  id          String        @id @default(cuid())
  userId      String
  date        DateTime
  amount      Decimal       @db.Decimal(10, 2)
  description String
  category    String        // Dynamic category value from CompanyCategory
  status      ExpenseStatus @default(PENDING_APPROVAL)
  receiptUrl  String?
  notes       String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  rejectedById    String?
  rejectedAt      DateTime?
  rejectionReason String?

  user                User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  rejectedBy          User?                @relation("RejectedExpenses", fields: [rejectedById], references: [id])
  approvals           Approval[]
  withdrawalApprovals WithdrawalApproval[]
  nudges              Nudge[]
}

model Approval {
  id        String   @id @default(cuid())
  expenseId String
  userId    String
  createdAt DateTime @default(now())

  expense Expense @relation(fields: [expenseId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([expenseId, userId])
}

model WithdrawalApproval {
  id        String   @id @default(cuid())
  expenseId String
  userId    String
  createdAt DateTime @default(now())

  expense Expense @relation(fields: [expenseId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([expenseId, userId])
}

// ===========================================
// Company (Multi-tenancy)
// ===========================================

model Company {
  id                 String   @id @default(cuid())
  name               String   @default("")
  currency           String   @default("USD")
  nudgeCooldownHours Int      @default(0) // 0 = no cooldown, can nudge anytime
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  users       User[]
  invitations Invitation[]
  categories  CompanyCategory[]
}

model CompanyCategory {
  id        String   @id @default(cuid())
  companyId String
  value     String   // Uppercase key (e.g., "FOOD", "LEGAL_FEES")
  label     String   // Display name (e.g., "Food & Dining")
  icon      String   @default("Tag") // Lucide icon name
  isDefault Boolean  @default(false) // Seeded default (cannot delete)
  isActive  Boolean  @default(true)  // Soft disable
  sortOrder Int      @default(0)     // Custom ordering
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@unique([companyId, value])
  @@index([companyId, isActive])
}

// CompanySettings - DEPRECATED, to be removed after migration
model CompanySettings {
  id        String   @id @default(cuid())
  name      String   @default("")
  currency  String   @default("USD")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ===========================================
// Nudge Model (for approval reminders)
// ===========================================

enum NudgeType {
  EXPENSE_APPROVAL
  WITHDRAWAL_APPROVAL
}

model Nudge {
  id        String    @id @default(cuid())
  expenseId String
  userId    String    // Who sent the nudge
  type      NudgeType
  createdAt DateTime  @default(now())

  expense Expense @relation(fields: [expenseId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([expenseId, type])
}
